{
    "compilerOptions": {
        "outDir": "./dist",
        "noImplicitAny": true,
        "module": "es6",
        "target": "ES5",
        "jsx": "react",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "module": "CommonJS",
        "types": [
            "node"
          ]
    },
    "include": ["/**/*.ts", "src/scripts/services.tsx"],
    "exclude": ["node_modules"]
}